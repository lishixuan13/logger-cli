{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "commonjs",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
